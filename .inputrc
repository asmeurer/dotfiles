# -*- mode: conf -*-
set show-all-if-ambiguous on
set completion-ignore-case on
set meta-flag on
set convert-meta off
set output-meta on
set bell-style none
# Makes - and _ complete to one another
# set completion-map-case on
# See http://docs.freebsd.org/info/readline/readline.info.Readline_Init_File.html for more information
# Also https://www.gnu.org/software/bash/manual/html_node/Readline-Init-File-Syntax.html
"\ep": history-search-backward
"\eP": history-search-forward
# iTerm2
"\e[1;9A": history-search-backward
"\e[1;9B": history-search-forward
# Konsole
"\e[1;3A": history-search-backward
"\e[1;3B": history-search-forward
# "\e\e[A": history-search-backward
# "\e\e[B": history-search-forward
# Type this to reload this file
"\C-x\C-r": re-read-init-file
# Prevent "Display all NNN possibilities? (y or n)" on tab complete
set completion-query-items 0
"\e[A": previous-history
"\e[B": next-history
# allow better pasting in the terminal
set enable-bracketed-paste on
# Color files by types
set colored-stats On
# Color the common prefix
set colored-completion-prefix On
